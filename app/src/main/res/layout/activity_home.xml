<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.indraarianggi.inventorikaryawan.HomeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Aplikasi Inventori Karyawan"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/ib_tambah_data"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/tambahh" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tambah Karyawan"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/ib_lihat_data"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/form" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Daftar Karyawan"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
